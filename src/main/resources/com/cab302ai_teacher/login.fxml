<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<!--
  FXML layout for the login screen of the AI Teacher Assistant application.
  This layout uses a VBox to vertically stack the UI components.
  It is controlled by LoginController.java.
-->
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cab302ai_teacher.controller.LoginController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <!-- Page title -->
    <Label text="AI Teacher Assistant - Login" style="-fx-font-size: 16px;" />

    <!-- Text field for entering the user's email -->
    <TextField fx:id="emailField" promptText="Email" />

    <!-- Password field for entering the user's password -->
    <PasswordField fx:id="passwordField" promptText="Password" />

    <!-- Login button that triggers the onLoginClick() method in LoginController -->
    <Button text="Login" onAction="#onLoginClick" />

</VBox>
