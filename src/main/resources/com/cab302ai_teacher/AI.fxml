<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.cab302ai_teacher.controller.AIController" prefWidth="600" prefHeight="400">
    <ProgressIndicator fx:id="progressIndicator" visible="false" />
    <!-- Chat Box Area -->
    <VBox id="chatBoxContainer" spacing="10">
        <!-- Correct padding with proper Insets definition -->
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>
        <TextArea fx:id="chatArea" prefWidth="580" prefHeight="300" editable="false" wrapText="true"/>
    </VBox>

    <!-- User Input and Send Button -->
    <HBox spacing="10">
        <!-- Correct padding with proper Insets definition -->
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>
        <TextField fx:id="userInput" promptText="Type your message..." prefWidth="450"/>
        <Button fx:id="sendButton" text="Send" onAction="#onSendMessageClick" prefWidth="100"/>
    </HBox>

    <!-- Dashboard Sidebar -->
    <VBox id="sidebar_ctnr" alignment="TOP_RIGHT" minHeight="300" minWidth="120" spacing="5">
        <padding>
            <Insets top="5" left="5"/>
        </padding>
        <Button styleClass="sidebar_btn" minWidth="100" minHeight="40" onAction="#onDashboardClick">Dashboard</Button>
        <Button styleClass="sidebar_btn" minWidth="100" minHeight="40" onAction="#onQuizzesClick">Quizzes</Button>
        <Button styleClass="sidebar_btn" id="sidebar_selected" minWidth="100" minHeight="40">AI Chat Bot</Button>
    </VBox>

</HBox>
